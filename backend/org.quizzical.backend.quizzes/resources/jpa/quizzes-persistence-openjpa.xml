<persistence
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.0">

	<!-- ******************************************************************* -->
	<!-- JTA -->
	<!-- ******************************************************************* -->

	<persistence-unit name="gnt_quiz" transaction-type="JTA">
		<jta-data-source>
			<![CDATA[
			osgi:javax.sql.DataSource/(name=jta-gnt)
			]]>
		</jta-data-source>
		<non-jta-data-source>
			<![CDATA[
			osgi:javax.sql.DataSource/(name=nonjta-gnt)
			]]>
		</non-jta-data-source>

		<!-- Based -->
		<class>org.gauntlet.core.model.JPABaseEntity</class>


		<!-- Quiz -->
		<class>org.gauntlet.quizzes.model.jpa.JPAQuiz</class>
		<class>org.gauntlet.quizzes.model.jpa.JPAQuizProblem</class>
		<class>org.gauntlet.quizzes.model.jpa.JPAQuizProblemResponse</class>
		<class>org.gauntlet.quizzes.model.jpa.JPAQuizSubmission</class>
		<class>org.gauntlet.quizzes.model.jpa.JPAQuizType</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="org.amdatu.jpa.allowNonTransactionalEntityManagerAccess"
				value="true" />
			<property name="openjpa.ManagedRuntime" value="org.apache.openjpa.ee.OSGiManagedRuntime" />
			<property name="openjpa.Log" value="slf4j" />
			<property name="openjpa.ConnectionFactoryProperties" value="PrintParameters=true" />

			<property name="openjpa.Log"
				value="DefaultLevel=WARN, Runtime=WARN, Tool=WARN, SQL=WARN" />	<!-- TRACE,INFO,WARN,ERROR,FATAL -->
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
			<property name="openjpa.jdbc.SchemaFactory" value="dynamic()"/>
			<property name="openjpa.jdbc.MappingDefaults" value="ForeignKeyDeleteAction=restrict,JoinForeignKeyDeleteAction=restrict"/>
		</properties>
	</persistence-unit>

</persistence>